/* pages/appreciation/appreciation.wxss */
.find-page{
  width: 100%;
  background: #ea7152;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.nav-bgimg image{
  width: 100%;
}
.app-video-box{
  width: 100%;
  height: auto;
  position: relative;
  display: flex;
  padding: 40rpx 40rpx 0 40rpx;
  box-sizing: border-box;
  border-radius: 10px;
  overflow: hidden;
}
.app-view-imgs{
  width: 100%;
  height: 220rpx;
  overflow: hidden;
}
.app-view-imgs image{
  width: 100%;
  min-height: 220rpx;
}
.app-view-head{
  padding: 0px 40rpx;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 180rpx;
  margin-top: 40rpx;
}
.app-view-head-body{
  width: 670rpx;
  height: 180rpx;
  background: white;
  box-shadow: 0px 0px 10rpx #e9e9e9;
  border-radius: 10px;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
}
.app-view-head-logo{
  width: 140rpx;
  height: 140rpx;
  background: white;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.app-view-head-logo image{
  width: 100%;
  height: 100%;
}
.app-view-head-info{
  width: 500rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.app-view-head-title{
  font-size: 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.com-video{
  width: 100vw;
  display: flex;
  position: relative;
}
.my-video{
  width: 100%;
  height: 380rpx;
  border-radius: 10px;
}
.app-video-text{
  position: absolute;
  bottom: 0rpx;
  left: 40rpx;
  width: 670rpx;
  background:linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.7));
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  border-radius: 0 0 10px 10px;
}
.app-video-title{
  font-size: 38rpx;
}
.app-video-textj{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.app-video-textj text{
  margin-right: 40rpx;
}
.video-play-btn{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 999;
  color: white;
}
.app-audio-box{
  width: 150rpx;
  height: 50rpx;
  color: white;
  display: flex;
  align-items: center;
  background: #5287fd;
  border-radius: 999rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}
.app-data-box{
  margin-top: 30rpx;
}
.liner{
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
  margin-bottom: 30rpx;
}