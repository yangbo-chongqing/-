/* pages/dataList/dataList.wxss */
.data-page{
  width: 100%;
  height: 100vh;
  /* padding-top: 20px; */
}
.scroll-view{
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.scroll-view-item{
  display: flex;
  width: 100%;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: white;
}
.scroll-view-media{
  width: 180rpx;
  margin-right: 20rpx;
}
.scroll-view-media image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}
.scroll-view-title{
  width: 480rpx;
  margin: 20rpx 0;
}

.find-tj-text {
  width: 500rpx;
  margin-left: 20rpx;
}

.find-tj-midas {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.no-data{
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 50rpx;
}