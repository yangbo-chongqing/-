/* pages/dataList/dataList.wxss */

.data-page{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 20rpx;
  box-sizing: border-box;
  /* padding-top: 20px; */
}
.data-page .van-search{
  width: 600rpx;
}
.add-entry{
  color: #5387fd;
  flex-shrink: 0;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 999px;
  display: flex;
  font-size: 28rpx;
}
.add-entry .van-icon{
  margin-right: 10rpx;
  font-size: 28rpx;
}
.scroll-box{
  width: 100%;
  position: relative;
}
.scroll-view{
  width: 100%;
  height: 85vh;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding-top: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}
.home-you-sel{
  width: 100%;
  margin: auto;
  margin-top: 20rpx;
  background: white;
}
.home-you-sel-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
}
.home-you-img{
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.home-you-body{
  display: flex;
  width: 150rpx;
  justify-content: space-between;
  flex-shrink: 0;
}
.home-you-title{
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  color: #333;
}
.home-you-title image{
  width: 32rpx;
  height: 32rpx;
}
.home-you-text{
  color: #5387fd;
  font-size: 32rpx;
}
.no-data{
  width: 100%;
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 40rpx;
}