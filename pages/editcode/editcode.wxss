/* pages/editcode/editcode.wxss */
.code-box{
  width: 560rpx;
  height: 750rpx;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-shadow: 0px 0px 10px #cccccc;
  padding: 40rpx;
  box-sizing: border-box;
  background: white;
  z-index: 101;
}
.code-box-canvas{
  visibility: hidden;
  pointer-events: none;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%,-50%);
  box-shadow: 0px 0px 10px #cccccc;
  z-index: 100;
}
.roate{
  transform: rotate(180deg);
}
.code-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
}
.code-item{
  width: 200rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.code1{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}
.code-image{
  width: 410rpx;
  height: 410rpx;
  margin: auto;
}
.code-image image{
  width: 100%;
  height: 100%;
}
.code2{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
textarea{
  font-size: 37.5rpx;
  font-weight: bold;
}
.code-text{
  width: 100%;
  text-align: center;
}
.code-icon{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  color: #999999;
}