@import "../../iconfont/iconfont.wxss";

.page {
    padding: 0 40rpx;
    box-sizing: border-box;
}

.send-data {
    display: flex;
    justify-content: flex-end;
    position: fixed;
    right: 0;
    padding: 0 40rpx;
    box-sizing: border-box;
    z-index: 100;
}

.send-data-btn {
    padding: 10rpx 20rpx;
    background: #5387fd;
    color: white;
    font-size: 26rpx;
    border-radius: 999px;
}

.entry-title {
    width: 100%;
    height: 60rpx;
    margin-bottom: 20rpx;
}

.entry-title input {
    height: 60rpx;
    border-bottom: 1px solid #333333;
}

.entry-upload {
    display: flex;
    justify-content: space-between;
}

.entry-upload-left {
    display: flex;
    color: #333333;
}

.entry-upload-left-tip {
    display: flex;
    align-items: center;
    margin-right: 15rpx;
    background: #f5f5f5;
    padding: 10rpx 15rpx;
    border-radius: 999px;
    font-size: 24rpx;
}

.entry-upload-left-tip image {
    margin-right: 6rpx;
}
.entry-upload-left-tip:nth-of-type(1) image {
    width: 40rpx;
    height: 28rpx;
}
.entry-upload-left-tip:nth-of-type(2) image {
    width: 35rpx;
    height: 28rpx;
}
.entry-upload-left-tip:nth-of-type(3) image {
    width: 25rpx;
    height: 28rpx;
}


.entry-upload-right {
    font-size: 24rpx;
    color: #999999;
    display: flex;
    align-items: center;
}

.eidt-detail-images-container .btn-container {
    margin-top: 20rpx;
}

.eidt-detail-images-container .btn-container .btn-view {
    padding: 0rpx 32rpx 32rpx 32rpx;
}

.eidt-detail-images-container .btn-container .btn-view button {
    border-radius: 0rpx;
}

.iconfont {
    display: inline-block;
    padding: 8px 8px;
    width: 24px;
    height: 24px;
    cursor: pointer;
    font-size: 20px;
}

.toolbar {
    box-sizing: border-box;
    border-bottom: 0;
    font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background: #fff;
    margin-top: 20rpx;
    font-size: 16px;
    line-height: 1.5;
}

.editor-entry-tip-add {
    display: flex;
    color: #5387fd;
    padding: 20rpx 0;
}

.editor-entry-tip-box {
    display: flex;
    flex-wrap: wrap;
}

.editor-entry-tip {
    padding: 10rpx 20rpx;
    background: #f5f5ff;
    border-radius: 999px;
    color: #5387fd;
    display: flex;
    align-items: center;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.entry-upload-box {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.entry-icon {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 100;
    background: rgba(0, 0, 0, 0.1);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.app-audio-box {
    width: 500rpx;
    height: 50rpx;
    color: white;
    display: flex;
    align-items: center;
    background: #5287fd;
    border-radius: 999rpx;
    font-size: 26rpx;
    justify-content: space-between;
    padding: 10rpx 10rpx;
    margin-top: 20rpx;
}

.entry-popup {
    padding: 20rpx;
    box-sizing: border-box;
}

.entry-popup-title {
    line-height: 60rpx;
    position: relative;
    font-size: 35rpx;
    width: 100%;
    text-align: center;
    color: #333333;
    font-weight: bold;
}

.entry-popup .van-search--withaction {
    padding: 0;
}

.entry-search {
    margin-top: 20rpx;
    width: 100%;
}
.entry-send-btn {
    position: absolute;
    right: 20rpx;
    line-height: 60rpx;
    font-size: 35rpx;
    color: #5287fd;
    top: 0;
}

.value-class {
    flex: none !important;
}

.audio-left-name {
    margin-left: 10rpx;
}

.audio-right {
    display: flex;
    align-items: center;
}

.audio-left {
    display: flex;
    align-items: center;
}

.entry-upload-data {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
    position: relative;
}

.entry-upload-data video {
    width: 100%;
    height: 100%;
}

.entry-upload-data image {
    width: 100%;
    height: 100%;
}

.iconfont {
    padding: 0;
}

.toolbar {
    box-sizing: border-box;
    padding: 0 10px;
    height: 50px;
    width: 100%;
    position: fixed;
    z-index: 999;
    left: 0;
    right: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ECECEC;
    border-left: none;
    border-right: none;
    background-color: #fff;
}

.ql-active {
    color: #06c;
}

.title {
    font-weight: bold;
    font-size: 20px;
    margin: 10rpx;
}